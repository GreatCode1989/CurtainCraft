{
  "name": "discover",
  "version": "1.0.0",
  "description": "Discover",
  "author": "RDS",
  "private": true,
  "scripts": {
    "dev": "npm-run-all devproxy devserver",
    "devproxy": "docker-compose up -d",
    "devserver": "cross-env NODE_ENV=development BASE_URL=https://discover.moscow/ BASE_BROWSER_URL=http://localhost:3000 PROXY=true nodemon server/index.js --watch server",
    "extyl-server": "cross-env NODE_ENV=production BASE_URL=https://mosturism.extyl.pro/ BASE_BROWSER_URL=https://mosturism.extyl.pro/ PROXY=true node server/index.js",
    "build": "nuxt build",
    "start": "cross-env PORT=80 node server/index.js",
    "generate": "nuxt generate",
    "lint": "node_modules/.bin/eslint --ext .js,.vue --ignore-path .gitignore .",
    "lintfix": "node_modules/.bin/eslint --fix",
    "test": "node_modules/.bin/jest",
    "test-watch": "node_modules/.bin/jest --watch"
  },
  "dependencies": {
    "@nuxtjs/axios": "^5.3.6",
    "@nuxtjs/proxy": "^1.3.1",
    "@nuxtjs/style-resources": "^0.1.2",
    "@nuxtjs/yandex-metrika": "^0.1.2",
    "camelcase-keys": "^6.1.0",
    "cross-env": "^5.2.0",
    "date-fns": "^1.30.1",
    "express": "^4.16.4",
    "fast-average-color": "^5.2.0",
    "husky": "^2.4.1",
    "normalize.css": "^8.0.1",
    "nuxt": "^2.10.2",
    "nuxt-i18n": "^6.3.0",
    "nuxt-mq": "^2.0.0",
    "nuxt-rambler-top100": "0.0.1",
    "stylus-mixins": "git+https://github.com/qluqua/stylus-mixins.git",
    "swiper": "^5.2.0",
    "v-calendar": "^1.0.0-beta.22",
    "vue-click-outside": "^1.0.7",
    "vue-cookies": "^1.5.12",
    "vue-yandex-maps": "^0.8.8",
    "vuebar": "0.0.20",
    "vuelidate": "^0.7.4"
  },
  "devDependencies": {
    "@nuxtjs/eslint-config": "^0.0.1",
    "@nuxtjs/google-analytics": "^2.2.1",
    "@vue/test-utils": "^1.0.0-beta.27",
    "babel-core": "7.0.0-bridge.0",
    "babel-eslint": "^10.0.1",
    "babel-jest": "^24.1.0",
    "babel-preset-vue": "^2.0.2",
    "bemto.pug": "^2.1.0",
    "browser-env": "^3.2.5",
    "csscomb": "^4.3.0",
    "eslint": "^5.16.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-config-standard": ">=12.0.0",
    "eslint-loader": "^2.1.2",
    "eslint-plugin-import": ">=2.16.0",
    "eslint-plugin-jest": ">=22.3.0",
    "eslint-plugin-node": ">=8.0.1",
    "eslint-plugin-nuxt": ">=0.4.2",
    "eslint-plugin-prettier": "^3.0.1",
    "eslint-plugin-promise": ">=4.0.1",
    "eslint-plugin-standard": ">=4.0.0",
    "eslint-plugin-vue": "^5.2.2",
    "jest": "^24.1.0",
    "lint-staged": "^9.2.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.18.9",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^12.0.1",
    "prettier": "^1.16.4",
    "pug": "^2.0.4",
    "pug-plain-loader": "^1.0.0",
    "require-extension-hooks": "^0.3.3",
    "require-extension-hooks-babel": "^0.1.1",
    "require-extension-hooks-vue": "^2.0.0",
    "sass-loader": "^7.1.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-jest": "^3.0.3",
    "vue-svg-loader": "^0.11.0",
    "vue-template-compiler": "^2.6.10"
  },
  "lint-staged": {
    "*.{scss,css}": [
      "csscomb -t -c ./.csscomb.json",
      "git add"
    ],
    "*.(js|vue)": [
      "npm run lintfix",
      "jest --bail --coverage false --findRelatedTests",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
